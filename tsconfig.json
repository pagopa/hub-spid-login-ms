{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "rootDir": ".",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*",
    "src/**/__mocks__/*"
  ]
}
